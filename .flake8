[flake8]
max-line-length = 120
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    node_modules,
    */migrations/*,
    .pytest_cache

# Only if you have these files that are noisy:
per-file-ignores =
    __init__.py:F401
    manage.py:E402
